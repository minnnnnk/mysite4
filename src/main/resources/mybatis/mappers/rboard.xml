<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rboard">


	<select id="rboardList" resultType="RboardVo">
		<![CDATA[
			select  no
			        ,user_no userNo
			        ,title
			        ,content
			        ,hit
			        ,reg_date regDate
			        ,group_no groupNo
			        ,order_no orderNo
			        ,depth
			from rboard
			order by group_no DESC, 
			order_no ASC
		]]>
	</select>
	
	<select id="getRboard" resultType="RboardVo" parameterType="int">
		<![CDATA[
			select  r.no no
			        ,user_no userNo
			        ,title
			        ,content
			        ,hit
			        ,reg_date regDate
			        ,group_no groupNo
			        ,order_no orderNo
			        ,depth
			        ,u.name
			from rboard r, users u
			where r.no = #{no}
			and r.user_no = u.no
		]]>
	</select>
	
	<insert id="rboardWrite" parameterType="RboardVo">
		<![CDATA[
			insert into rboard
			values(seq_rboard_no.nextval,#{title},#{content},0,sysdate,#{userNo},seq_rboard_no.nextval,1,0)
		]]>
	</insert>
	
	<insert id="commentWrite" parameterType="RboardVo">
		<![CDATA[
			insert into rboard
			values(seq_rboard_no.nextval,#{title},#{content},0,sysdate,#{userNo},#{groupNo},#{orderNo}+1,#{depth}+1)
		]]>
	</insert>
	
	<update id="hitUpdate" parameterType="int">
		<![CDATA[
			update rboard
			set hit = hit+1
			where no = #{no}	
		]]>
	</update>
	
	<delete id="rboardDelete" parameterType="int">
		<![CDATA[
			delete from rboard
			where no = #{no}
		]]>
	</delete>
	
	<update id="rboardUpdata" parameterType="RboardVo">
		<![CDATA[
			update rboard
			set title = #{title}
			    ,content = #{content}
			where no = #{no}
		]]>
	</update>
</mapper>